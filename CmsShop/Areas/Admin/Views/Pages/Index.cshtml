@model IEnumerable<CmsShop.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "Strony";
}

<h6>Strony</h6>
<hr class="headerUnderline" />

<p class="addPage">
    @Html.ActionLink("Dodaj nową stronę", "AddPage")
</p>

@if (!Model.Any())
{
    <h1 class="text-center">Nie ma żadnej strony</h1>
}
else
{
    <table class="table sorting" id="pages">
        <tr class="home">
            <th>
                Tytuł strony
            </th>
            <th>
                Adres strony
            </th>
            <th>
                Pasek boczny
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr id="id_@item.Id" class="@item.Slug">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasSidebar)
                </td>
                <td class="pagesButtons">
                    @Html.ActionLink("Edycja", "EditPage", new { id = item.Id }, new { @class = "btn-edit" })
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn-edit" })
                    @if (item.Slug != "home")
                    {
                        @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "delete btn-edit" })
                    }

                </td>
            </tr>
        }

    </table>
}

@section scripts {
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>

    <script>

        /*
         * Potwierdzenie usunięcia strony
        */
        $(function () {
            $("a.delete").click(function () {
                if (!confirm("Potwierdzasz usunięcie strony")) return false;
            });
        });

        /*
         * Drag and drop (sortowanie)
        */
        $(function () {

            $("table#pages tbody").sortable({
                items: "tr:not(.home)", 
                placeholder: "ui-state-highlight",
                update: function () {
                    var ids = $("table#pages tbody").sortable("serialize");
                    var url = "/Admin/Pages/ReorderPages";

                    $.post(url, ids, function (data) {

                    })
                }
            })
        });

    </script>

}
