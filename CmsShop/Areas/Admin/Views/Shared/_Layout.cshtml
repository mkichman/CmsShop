<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-topcancel navbar-admin">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Admin/Dashboard" class="navbar-brand dashboard-nav">Dashboard </a>
            </div>
            <div class="navbar-collapse collapse admin-navigation">
                <ul class="nav navbar-nav admin-nav">
                    <li> <a href="/Admin/Pages/">Strony</a></li>
                    <li> <a href="/Admin/Shop/Categories">Kategorie</a></li>
                    <li> <a href="/Admin/Shop/Products">Produkty</a></li>
                    <li> <a href="/Admin/Shop/Orders">Zamówienia</a></li>
                </ul>
            </div>
            <ul class="navbar-right backToShop">
                <a href="/" class="navbar-brand">Powrót do sklepu</a>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
