<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — Sklep zoologiczny</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Comfortaa&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="logo">
        <a href="/" class="navbar-brand"><img src="~/Images/logo.png" /><h1>WhaleSpot</h1></a>
    </div>
    <div class="pull-right">
        @Html.Action("CartPartial", "Cart")
        <a href="/Admin/Dashboard">Admin</a>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-topcancel">


        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <div class="nav navbar-nav">
                    @Html.Action("CategoryMenuPartial", "Shop")

                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">

        <div class="row">


            @if (ViewBag.Sidebar == "Tak")
            {
                <div class="col-xs-12 col-md-7">
                    @RenderBody()
                </div>
                <div class="col-xs-12 col-md-3">
                    @Html.Action("SidebarPartial", "Pages")
                </div>
            }
            else
            {
                <div class="col-xs-12 col-md-10">
                    @RenderBody()
                </div>
            }

        </div>
        <hr />
        <footer>
            <div class="user">
                <ul class="nav navbar-nav">
                    @Html.Action("PagesMenuPartial", "Pages")
                </ul>
            </div>
            <p>&copy; @DateTime.Now.Year — Zoologiczny sklep internetowy</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
